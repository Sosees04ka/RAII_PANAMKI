<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Цветной круг -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="90"
                android:startColor="#007AFF"
                android:endColor="#00FF66" />
            <size
                android:width="56dp"
                android:height="56dp" />
        </shape>
    </item>

    <!-- Первая линия (наклон 45°) -->
    <item
        android:left="10dp"
        android:right="10dp">
        <rotate
            android:fromDegrees="45">
            <shape android:shape="line">
                <stroke
                    android:width="5dp"
                    android:color="#ffffff" />
            </shape>
        </rotate>
    </item>

    <!-- Вторая линия (наклон 135°) -->
    <item
        android:left="10dp"
        android:right="10dp">
        <rotate
            android:fromDegrees="135">
            <shape android:shape="line">
                <stroke
                    android:width="5dp"
                    android:color="#ffffff" />
            </shape>
        </rotate>
    </item>

</layer-list>
